{% autoescape false %}
<div class="ui teal segment"> <!-- start outer teal segment -->
	<div class="ui two column doubling grid container"> <!-- start header grid -->

			<div class="column">
				<h2 class="ui teal header">
					<i class="huge teal users icon"></i>
					<div class="content">{{ TEXT.MANAGE_USERS }}</div>
				</h2>
			</div>			
			<div class="column">		
				<h3 class="ui teal right floated header">
					<div class="content">{{ HEADING.ADD_USER }} / {{ HEADING.MODIFY_USER }}</div>
				</h3>
			</div>

	</div> <!-- end header grid -->

	<div class="ui teal segment"> <!-- start inner teal segment -->	

		<div class="ui two column doubling grid container"> <!-- start content-->	

			{% include "@theme/users_tree.lte" %} <!-- include users tree-->

			<div class="twelve wide column"> <!-- start add user -->
				<form name="{{ FORM_NAME }}" id="{{ FORM_NAME }}" action="{{ ACTION_URL }}" method="post">
					<input type="hidden" name="user_id" value="{{ user.user_id }}" />
					<input type="hidden" name="username_fieldname" value="{{ username_fieldname }}" />			
				
					<div class="ui two column doubling grid container"> <!-- start level 1-->
						
						<div class="ui teal message user_message">
							<i class="close icon"></i>
							<div class="header">{{ MENU.USERS }}</div>
							<p>{{ NEWUSERHINT }}</p>
						</div>					
					
						 <!-- start row users -->
							<div class="column">
								<div class="ui form">
									<div class="inline fields">
										<label>{{ TEXT.USERNAME }}:</label>
										<input type="text" name="{{ username_fieldname }}" value="{{ user.username }}" />
									</div>
								</div>							
							</div>	
						
							<div class="column">			
								<div class="ui form">
									<div class="inline fields">
										<label>{{ TEXT.DISPLAY_NAME }}:</label>
										<input type="text" name="display_name" value="{{ user.display_name }}" />
									</div>
								</div>					
							</div>					
	


							<div class="column">
								<div class="ui form">
									<div class="inline fields">
										<label>{{ TEXT.EMAIL }}:</label>
										<input type="text" name="email" value="{{ user.email }}" />
									</div>
								</div>							
							</div>
							<div class="column">			
								<div class="ui form">
									<div class="inline fields">
										<label>{{ TEXT.HOME_FOLDER }}:</label>
										<select class="ui fluid dropdown" name="home_folder">
											<option value="">{{ TEXT.NONE }}</option>
											{% for folder in media_dirs %}
											<option value="{{ folder }}" {%  if (folder == user.home_folder) %}selected='selected'{% endif %}>{{ folder }}</option>
											{% endfor %}
										</select>
									</div>
								</div>					
							</div>					

						

							<div class="column">			
								<div class="ui form">
									<div class="inline fields">
										<label>{{ TEXT.GROUP }}:</label>
										<select name="groups[]" multiple="">
										{% for group in all_groups %}		
											<option value="{{ group.group_id }}" {% if (group.group_id in groups_ids) %}selected="selected"{% endif %}>{{ group.name }}</option>
										{% endfor %}
										</select>
									</div>
								</div>					
							</div>
							
							<div class="column">
							
									<div class="ui segment">
										<div class="ui checkbox">
											<input type="checkbox" name="active[]" id="active" value="1" {% if user.active == 1 %}checked="checked"{% endif %} />
											<label>{{ TEXT.ACTIVE }}</label>
										</div>

								</div>							
							</div>				
	
						

							<div class="column">			
								<div class="ui form">
									<div class="inline fields">
										<label>{{ TEXT.PASSWORD }}:</label>
										<input type="password" name="password" value="{{ user.password }}" />
									</div>
								</div>					
							</div>	
							
							<div class="column">			
								<div class="ui form">
									<div class="inline fields">
										<label>{{ TEXT.RETYPE_PASSWORD }}:</label>
										<input type="password" name="password2" value="{{ user.password }}" />
									</div>
								</div>					
							</div>				
	

	
						<div class="ui five column doubling grid container"> <!-- start submit -->	
							<div class="column">							
							</div>
							
							<div class="column">
								<button class="positive ui button lepsem_submit">
									<input type="submit" name="submit" value="{{ TEXT.SAVE }}" />							
								</button>							
							</div>					
						
							<div class="column">			
								<button class="negative ui button lepsem_submit">
									<input type="reset" name="reset" value="{{ TEXT.RESET }}" />							
								</button>					
							</div>	
						
							<div class="column">
								<button class="negative ui button lepsem_submit">
									<input type="button" name="delete" value="{{ TEXT.DELETE }}" />							
								</button>							
							</div>				
						</div> <!-- end submit -->							
					
					</div> <!-- end level 1 -->

				</form>
			
			</div> <!-- end add user -->
		
		</div> <!-- end content -->	
	
	
	
	</div> <!-- end inner teal segment1 -->

</div> <!-- end outer teal segment -->

{% endautoescape %}